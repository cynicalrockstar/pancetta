<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helperControls="using:Pancetta.Windows.HelperControls"
                    xmlns:local="using:Pancetta.Windows">

    <!--  Template for the SimpleTextButton  -->
    <Style TargetType="helperControls:SimpleTextButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="helperControls:SimpleTextButton">
                    <Grid Margin="-4,-4,-4,-13"
                          Background="White"
                          Padding="4,4,14,13">
                        <TextBlock x:Name="ui_buttonText"
                                   FontSize="15"
                                   Text="text button" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
